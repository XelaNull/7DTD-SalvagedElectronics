<configs>
  <!-- 
    Taken from: https://7daystodie.com/forums/showthread.php?67181-Recipe-for-Solar-Cells
  -->
	<!-- The line below was added for compatibility in case another modlet creates this recipe -->
	<remove xpath="/recipes/recipe[@name='solarCell']" />
	<!-- Add in a new recipe for solarCell -->
	<append xpath="/recipes">
    <recipe name="solarCell" count="1" craft_area="workbench" tags="workbenchCrafting,learnable,perkAdvancedEngineering">
	    <ingredient name="resourceForgedSteel" count="25"/>
	    <ingredient name="glassBlockVariantHelper" count="3"/>
	    <ingredient name="resourceElectricParts" count="4"/>
	    <ingredient name="resourceRepairKit" count="5"/>
			<!--
			<effect_group>
				<passive_effect name="CraftingIngredientCount" level="2,6" operation="perc_add" value="1,5" tags="resourceForgedSteel,glassBlockVariantHelper,resourceElectricParts,resourceElectronicParts"/>
			</effect_group>
			-->
    </recipe> 
		<!-- The line below was added for compatibility in case another modlet creates this recipe -->
		<remove xpath="/recipes/recipe[@name='solarbank']" />
		<!-- Add in a new recipe for solarbank -->
    <recipe name="solarbank" count="1" craft_area="workbench" tags="workbenchCrafting,perkAdvancedEngineering">
	    <ingredient name="resourceScrapPolymers" count="100"/>
	    <ingredient name="resourceElectricParts" count="10"/>
	    <ingredient name="resourceRepairKit" count="10"/>
	    <ingredient name="resourceMechanicalParts" count="10"/>
    </recipe>
  </append>
</configs>
